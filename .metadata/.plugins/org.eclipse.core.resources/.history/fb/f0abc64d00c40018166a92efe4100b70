package br.com.cursojava.aula003;

import java.util.Scanner;

public class Ex8PrimeiraPalavra {
	public static void main(String[] args) {
		Scanner tecladoEx8 = new Scanner(System.in);
		
		System.out.println("Digite uma frase");
		
		String primeiraPalavra = tecladoEx8.nextLine();
		
		int quantidadeLetras = primeiraPalavra.length();
		int quantidadeLetrasDepoisEspaco = primeiraPalavra.indexOf("");
		
		
		System.out.println(primeiraPalavra.substring(0, quantidadeLetras - quantidadeLetrasDepoisEspaco));
		
		tecladoEx8.close();
	}
}
