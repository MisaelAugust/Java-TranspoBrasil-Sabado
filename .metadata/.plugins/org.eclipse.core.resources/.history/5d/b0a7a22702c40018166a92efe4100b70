package br.com.cursojava.aula003;

import java.util.Scanner;

public class Ex7FraseSemVogais {
	public static void main(String[] args) {
		Scanner tecladoEx7 = new Scanner(System.in);
		
		System.out.println("Escreva uma frase: ");
		
		
		String frase = tecladoEx7.nextLine();
				
		String semVogal1 = frase.toLowerCase().replace("a", " ");
		String semVogal2 = frase.toLowerCase().replace("e", " ");
		String semVogal3 = frase.toLowerCase().replace("i", " ");
		String semVogal4 = frase.toLowerCase().replace("o", " ");
		String semVogal5 = frase.toLowerCase().replace("u", " ");
		
		if(semVogal1.contains("a")){
			System.out.println(semVogal1);
		}else if(semVogal2.contains("e")){
			System.out.println(semVogal2);
		}
		
		
		tecladoEx7.close();		

	}
}
