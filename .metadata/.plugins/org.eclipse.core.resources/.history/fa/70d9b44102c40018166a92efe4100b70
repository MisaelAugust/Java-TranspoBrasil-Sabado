package br.com.cursojava.aula003;

import java.util.Scanner;

public class Ex7FraseSemVogais {
	public static void main(String[] args) {
		Scanner tecladoEx7 = new Scanner(System.in);
		
		System.out.println("Escreva uma frase: ");
		
		
		String frase = tecladoEx7.nextLine();
				
		String semVogal = frase.toLowerCase().replaceAll("a", " ");
		semVogal = semVogal.toLowerCase().replaceAll("e", " ");
		semVogal = semVogal.toLowerCase().replace("i", " ");
		semVogal = semVogal.toLowerCase().replace("o", " ");
		semVogal = semVogal.toLowerCase().replace("u", " ");
		
		System.out.println(semVogal);
		
		tecladoEx7.close();		

	}
}
